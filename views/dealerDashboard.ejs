    <style>
        
        .dash{
            /* border: 1px solid black; */
            box-shadow: 4px 4px 10px rgb(48, 48, 48);
            width: 950px;
            border-radius: 8px;
        }
        .up{
            background-color: rgb(100, 92, 92);
        }
        .upr{
            
            
            background: -webkit-linear-gradient(to right,rgb(80, 79, 79), #e8cbc0,);
            background: linear-gradient(to right, rgb(102, 101, 101),#e8cbc0);
            padding: 10px;
            padding-left: 30px;
            border-radius: 5px;
            
        }
        .btn{
            background-color: rgb(0, 0, 0);
            color: white;
            box-shadow: 0px 0px 10px white;
        }

